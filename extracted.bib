@article{Tilman1994a,
  author =        {Tilman, D and May, R M and Lehman, C L and
                   Nowak, M A},
  journal =       {Nature},
  pages =         {65--66},
  title =         {{Habitat destruction and the extinction debt}},
  volume =        {371},
  year =          {1994},
  abstract =      {HABITAT destruction is the major cause of species
                   extinctions(1-3) Dominant species often are
                   considered to be free of this threat because they are
